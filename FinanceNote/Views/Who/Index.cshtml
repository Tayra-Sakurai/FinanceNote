@model IEnumerable<FinanceNote.Models.Who>

@{
    ViewData["Title"] = "Index";
    decimal cashTotal = 0;
    decimal icocaTotal = 0;
}

<h1>小遣い帳トップ</h1>

<p>
    <a asp-action="Create">新規</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cash)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Icoca)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        cashTotal += item.Cash;
        icocaTotal += item.Icoca;
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Event)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cash)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Icoca)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<div class="sticky-bottom">
    <div class="list-group">
        <div class="list-group-item">
            現金残高: &yen;@cashTotal
        </div>
        <div class="list-group-item">
            ICOCA 残高: &yen;@icocaTotal
        </div>
    </div>
</div>
